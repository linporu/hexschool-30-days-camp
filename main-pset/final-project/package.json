{
  "name": "hexschool-final-project",
  "version": "1.0.0",
  "description": "hexschool-final-project",
  "scripts": {
    "scss:build": "sass src/scss/style.scss dist/style.css",
    "scss:watch": "sass src/scss/style.scss dist/style.css --watch",
    "scss:build-compressed": "sass src/scss/style.scss dist/style.css --style=compressed",
    "ts:build": "tsc",
    "ts:watch": "tsc --watch",
    "build": "npm run scss:build && npm run ts:build",
    "dev": "npm run scss:watch & npm run ts:watch",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "sass": "^1.77.8",
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0"
  },
  "keywords": [
    "scss",
    "blog",
    "responsive",
    "typescript"
  ],
  "author": "linporu",
  "license": "MIT"
}
